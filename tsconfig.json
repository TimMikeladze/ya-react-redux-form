{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": true
  },
  "filesGlob": [
    "src/**/.ts",
    "test/**/.ts"
  ],
  "files": [
    "typings/main/index.d.ts",
    "src/index.ts",
    "test/tests.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
